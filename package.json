{
  "name": "allset-inc",
  "version": "1.0.0",
  "description": "allset UI code base",
  "scripts": {
    "build": "NODE_ENV=production webpack --config config/webpack/webpack.config.js",
    "build:app": "npm run build",
    "build:a": "npm run build && ionic capacitor add android",
    "build:ios": "npm run build && ionic capacitor add ios",
    "start": "webpack-dev-server --config config/webpack/webpack.config.js --open",
    "start:app": "electron config/electron/index.electron.ts",
    "start:a": "ionic capacitor open android",
    "start:ios": "ionic capacitor open ios",
    "fix:eslint": "eslint -c config/eslint/.eslintrc --ignore-path config/eslint/.eslintignore ./ --fix",
    "fix:prettier": "prettier --config config/prettier/.prettierrc --ignore-path config/prettier/.prettierignore --write \"./**/*.{js,jsx,ts,tsx,json,html,scss}\"",
    "fix:stylelint": "stylelint --config config/stylelint/.stylelintrc \"src/**/*.{css,scss}\" --fix",
    "lint": "npm run fix:prettier && npm run fix:eslint && npm run fix:stylelint",
    "test:unit": "jest --config config/jest/jest.config.js",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:e2e": "cypress open --project ./config/cypress",
    "cap:setup": "brew install cocoapods && sudo xcode-select --reset && npm run build:a && npm run build:ios",
    "cap:sync": "npx cap sync",
    "preinstall": "npm run configGithooks",
    "configGithooks": "chmod ug+x config/githooks/* && git config core.hooksPath config/githooks",
    "ionic": "ionic"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allset-inc/UI.git"
  },
  "keywords": [
    "allset"
  ],
  "author": "Subbiah Chandramouli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allset-inc/UI/issues"
  },
  "homepage": "https://github.com/allset-inc/UI#readme",
  "dependencies": {
    "@capacitor/android": "4.6.2",
    "@capacitor/app": "4.1.1",
    "@capacitor/core": "4.6.2",
    "@capacitor/haptics": "4.1.0",
    "@capacitor/ios": "4.6.2",
    "@capacitor/keyboard": "4.1.1",
    "@capacitor/status-bar": "4.1.1",
    "@ionic-native/core": "5.36.0",
    "@ionic/react": "6.5.1",
    "@reduxjs/toolkit": "1.9.2",
    "@tanstack/query-sync-storage-persister": "^4.32.0",
    "@tanstack/react-query": "^4.32.0",
    "@tanstack/react-query-persist-client": "^4.32.0",
    "axios": "1.2.6",
    "gsap": "3.11.4",
    "i18next": "^22.4.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^12.1.4",
    "react-redux": "8.0.5",
    "react-router-dom": "6.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@capacitor/cli": "4.6.2",
    "@ionic/cli": "6.20.8",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@trivago/prettier-plugin-sort-imports": "4.0.0",
    "@types/electron": "1.6.10",
    "@types/ip": "^1.1.0",
    "@types/jest": "29.4.0",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "babel-loader": "9.1.2",
    "clean-webpack-plugin": "4.0.0",
    "concurrently": "7.6.0",
    "css-loader": "6.7.3",
    "cypress": "12.4.1",
    "dotenv": "16.0.3",
    "electron": "22.1.0",
    "eslint": "8.33.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-i18next": "^6.0.0-2",
    "eslint-plugin-react": "7.32.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "ip": "1.1.8",
    "jest": "29.4.1",

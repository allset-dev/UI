{
  "name": "allset",
  "version": "1.0.0",
  "description": "allset UI code base",
  "main": "config/index.electron.ts",
  "scripts": {
    "build": "MODE=\"production\" webpack --config config/webpack/webpack.config.js",
    "build:dev": "webpack --config config/webpack/webpack.config.js",
    "build:a": "ionic capacitor add android",
    "build:ios": "ionic capacitor add ios",
    "start": "webpack-dev-server --config config/webpack/webpack.config.js --open",
    "start:app": "concurrently \"npm start\" \"wait-on http://localhost:3001 && electron .\"",
    "start:a": "ionic capacitor open android",
    "start:ios": "ionic capacitor open ios",
    "fix:eslint": "eslint -c config/eslint/.eslintrc --ignore-path config/eslint/.eslintignore ./ --fix",
    "fix:prettier": "prettier --config config/prettier/.prettierrc --ignore-path config/prettier/.prettierignore --write \"./**/*.{js,jsx,ts,tsx,json,html,scss}\"",
    "fix:stylelint": "stylelint --config config/stylelint/.stylelintrc \"src/**/*.{css,scss}\" --fix",
    "lint": "npm run fix:prettier && npm run fix:eslint && npm run fix:stylelint",
    "test:unit": "jest --config ./config/jest/jest.config.js",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:e2e": "cypress open --project ./config/cypress",
    "cap:setup": "brew install cocoapods && npm run setup:a && npm run setup:ios",
    "cap:sync": "npx cap sync",
    "preinstall": "npm run configGithooks",
    "configGithooks": "chmod ug+x config/githooks/* && git config core.hooksPath config/githooks",
    "ionic": "ionic"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allset-inc/UI.git"
  },
  "keywords": [
    "allset"
  ],
  "author": "Subbiah Chandramouli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allset-inc/UI/issues"
  },
  "homepage": "https://github.com/allset-inc/UI#readme",
  "dependencies": {
    "@capacitor/android": "4.0.1",
    "@capacitor/app": "4.0.1",
    "@capacitor/core": "4.0.1",
    "@capacitor/haptics": "4.0.1",
    "@capacitor/ios": "4.0.1",
    "@capacitor/keyboard": "4.0.1",
    "@capacitor/status-bar": "^4.0.1",
    "@ionic-native/core": "5.36.0",
    "@ionic/react": "6.2.3",
    "@reduxjs/toolkit": "1.8.4",
    "axios": "0.27.2",
    "gsap": "3.11.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "8.0.2",
    "react-router-dom": "6.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@babel/preset-env": "7.18.10",
    "@babel/preset-react": "7.18.6",
    "@capacitor/cli": "4.0.1",
    "@ionic/cli": "6.20.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.3.0",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/electron": "1.6.10",
    "@types/jest": "28.1.7",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "babel-loader": "8.2.5",
    "clean-webpack-plugin": "4.0.0",
    "concurrently": "7.3.0",
    "css-loader": "6.7.1",
    "cypress": "10.6.0",
    "dotenv": "16.0.1",
    "electron": "20.0.2",
    "eslint": "8.22.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "28.1.3",
    "path": "0.12.7",
    "prettier": "2.7.1",
    "sass": "1.54.4",
    "sass-loader": "13.0.2",
    "style-loader": "3.3.1",
    "stylelint": "14.10.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "5.0.0",
    "ts-jest": "28.0.8",
    "ts-loader": "9.3.1",
    "typescript": "4.7.4",
    "wait-on": "6.0.1",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.10.0"
  }
}

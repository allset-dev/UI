{
  "name": "allset",
  "version": "1.0.0",
  "description": "allset UI code base",
  "main": "config/index.electron.ts",
  "scripts": {
    "build": "MODE=\"production\" webpack --config config/webpack.config.js",
    "build:dev": "webpack --config config/webpack.config.js",
    "configGithooks": "chmod ug+x config/githooks/* && git config core.hooksPath config/githooks",
    "start": "webpack-dev-server --config config/webpack.config.js",
    "start:app": "concurrently \"npm start\" \"wait-on http://localhost:3001 && electron .\"",
    "start:a": "npx cap open android",
    "start:ios": "npx cap open ios",
    "fix:eslint": "eslint -c config/.eslintrc --ignore-path config/.eslintignore ./ --fix",
    "fix:prettier": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --write \"./**/*.{js,jsx,ts,tsx,json,html,scss}\"",
    "lint": "npm run fix:prettier && npm run fix:eslint",
    "preinstall": "npm run configGithooks",
    "setup": "ionic capacitor add android && ionic capacitor add ios",
    "test:unit": "jest --config ./config/jest/jest.config.js",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:e2e": "cypress open --project ./config",
    "ionic": "ionic"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allset-inc/UI.git"
  },
  "keywords": [
    "allset"
  ],
  "author": "Subbiah Chandramouli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allset-inc/UI/issues"
  },
  "homepage": "https://github.com/allset-inc/UI#readme",
  "dependencies": {
    "@capacitor/android": "3.6.0",
    "@capacitor/app": "1.1.1",
    "@capacitor/core": "3.6.0",
    "@capacitor/haptics": "1.1.4",
    "@capacitor/ios": "3.6.0",
    "@capacitor/keyboard": "1.2.3",
    "@capacitor/status-bar": "1.0.8",
    "@hugotomazi/capacitor-navigation-bar": "1.1.1",
    "@ionic-native/core": "5.36.0",
    "@ionic/react": "6.1.13",
    "axios": "0.27.2",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.6",
    "@babel/preset-env": "7.18.6",
    "@babel/preset-react": "7.18.6",
    "@capacitor/cli": "3.6.0",
    "@ionic/cli": "6.20.1",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/electron": "1.6.10",
    "@types/jest": "28.1.4",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "babel-loader": "8.2.5",
    "clean-webpack-plugin": "4.0.0",
    "concurrently": "7.2.2",
    "css-loader": "6.7.1",
    "cypress": "10.3.0",
    "dotenv": "16.0.1",
    "electron": "19.0.8",
    "eslint": "8.19.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-react": "7.30.1",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "28.1.2",
    "path": "0.12.7",
    "prettier": "2.7.1",
    "react-scripts": "5.0.1",
    "sass": "1.53.0",
    "sass-loader": "13.0.2",
    "style-loader": "3.3.1",
    "ts-jest": "28.0.5",
    "ts-loader": "9.3.1",
    "typescript": "4.7.4",
    "wait-on": "6.0.1",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.9.3"
  }
}

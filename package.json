{
  "name": "allset",
  "version": "1.0.0",
  "description": "allset UI code base",
  "main": "config/index.electron.ts",
  "scripts": {
    "build": "MODE=\"production\" webpack --config config/webpack.config.js",
    "build:dev": "webpack --config config/webpack.config.js",
    "clearPort": "npx kill-port 3001",
    "configGithooks": "chmod ug+x config/githooks/* && git config core.hooksPath config/githooks",
    "dev": "npm run clearPort && PORT=\"3001\" webpack-dev-server --config config/webpack.config.js",
    "dev:app": "concurrently \"npm run dev\" \"wait-on http://localhost:3001 && electron .\"",
    "dev:android": "npx cap run android",
    "dev:ios": "npx cap run ios",
    "fix:eslint": "eslint -c config/.eslintrc --ignore-path config/.eslintignore ./ --fix",
    "fix:prettier": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --write \"./**/*.{js,jsx,json,html,scss}\"",
    "lint": "npm run fix:prettier && npm run fix:eslint",
    "preinstall": "npm run configGithooks",
    "setup": "ionic capacitor add android && ionic capacitor add ios",
    "test:unit": "jest --config ./config/jest/jest.config.js",
    "test:watch": "npm run test:unit -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allset-inc/UI.git"
  },
  "keywords": [
    "allset"
  ],
  "author": "Subbiah Chandramouli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allset-inc/UI/issues"
  },
  "homepage": "https://github.com/allset-inc/UI#readme",
  "dependencies": {
    "@capacitor/android": "3.5.0",
    "@capacitor/core": "^3.5.0",
    "@capacitor/ios": "3.5.0",
    "axios": "^0.26.1",
    "react": "18.0.0",
    "react-dom": "18.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@capacitor/cli": "^3.5.0",
    "@ionic/cli": "^6.19.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/electron": "1.6.10",
    "@types/jest": "^27.4.1",
    "@types/react": "18.0.6",
    "@types/react-dom": "18.0.2",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "babel-loader": "8.2.5",
    "clean-webpack-plugin": "4.0.0",
    "concurrently": "7.1.0",
    "css-loader": "6.7.1",
    "electron": "18.1.0",
    "eslint": "8.14.0",
    "eslint-plugin-react": "7.29.4",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "^27.5.1",
    "path": "0.12.7",
    "prettier": "2.6.2",
    "sass": "1.50.1",
    "sass-loader": "12.6.0",
    "style-loader": "3.3.1",
    "ts-jest": "^27.1.4",
    "ts-loader": "9.2.8",
    "typescript": "4.6.3",
    "wait-on": "6.0.1",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.8.1"
  }
}

#!/usr/bin/env bash
COMMIT_MSG=`cat $1`
PATTERN="^(\[allset-[[:digit:]]+])+ [A-Z].+"

if [ $NC ]; then
  exit 0
fi

if ! [[ "$COMMIT_MSG" =~ $PATTERN ]]; then
  echo `tput setaf 1`"Bad commit message: $COMMIT_MSG, see example: [allset-0000] Commit message, [allset-0000][allset-0001] Commit message"`tput sgr0`
  exit 1
fi